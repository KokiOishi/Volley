<?xml version="1.0" encoding="utf-8" ?>
<ContentView
             xmlns:controls="clr-namespace:Volley.Mobile.Forms.Controls"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Volley.Mobile.Forms.Controls.Singleplayer.ReceiverInputSingleplayer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonSF" Grid.Row="0" Grid.Column="{Binding StrokeColumn, Mode=OneWay}" Text="SF" />
        <Button x:Name="ButtonVF" Grid.Row="0" Grid.Column="{Binding VolleyColumn, Mode=OneWay}" Text="VF" />
        <Button x:Name="ButtonErrored" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Errored" />
        <Button x:Name="ButtonSB" Grid.Row="2" Grid.Column="{Binding StrokeColumn, Mode=OneWay}" Text="SB" />
        <Button x:Name="ButtonVB" Grid.Row="2" Grid.Column="{Binding VolleyColumn, Mode=OneWay}" Text="VB" />
    </Grid>
</ContentView>